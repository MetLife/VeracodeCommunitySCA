{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:security/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "@microsoft/sdl",
        "node",
        "security"
    ],
    "rules": {
        "@microsoft/sdl/no-unsafe-alloc": "error",
        "node/no-deprecated-api": "error"
    }
}